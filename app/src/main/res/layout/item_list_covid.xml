<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:elevation="6dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="2021-07-03"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/isolasi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="Isolasi"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/tanggal"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sembuh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Sembuh"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/isolasi"
            app:layout_constraintTop_toTopOf="@+id/isolasi" />

        <TextView
            android:id="@+id/meninggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meninggal"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/sembuh"
            app:layout_constraintTop_toTopOf="@+id/sembuh" />

        <TextView
            android:id="@+id/karantina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="karantina"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/meninggal"
            app:layout_constraintTop_toTopOf="@+id/meninggal" />

        <TextView
            android:id="@+id/jumlah_isolasi"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:text="1111"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/isolasi"
            app:layout_constraintTop_toBottomOf="@+id/isolasi" />

        <TextView
            android:id="@+id/jumlah_sembuh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="2222"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/jumlah_isolasi"
            app:layout_constraintTop_toTopOf="@+id/jumlah_isolasi" />

        <TextView
            android:id="@+id/jumlah_meninggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="333"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/jumlah_sembuh"
            app:layout_constraintTop_toTopOf="@+id/jumlah_sembuh" />

        <TextView
            android:id="@+id/jumlah_karantina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="444"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/jumlah_meninggal"
            app:layout_constraintTop_toTopOf="@+id/jumlah_meninggal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>